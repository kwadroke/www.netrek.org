# Control the amount of information that the MetaServer displays:
#  0	Servers which have players but not a wait queue.
#  1	+ Servers with a wait queue.
#  2	+ Servers with nobody playing. (see NOTE1).
#  3	+ Servers which have Timed Out for the MetaServer (see NOTE2).
#  4	+ Servers which the MetaServer has not been able to connect to.
metaStatusLevel: 2

# show ping statistics in the metaserver window. Enabled by default.
#metaPing: off


showHints:off

# PlanetBitmap: 0
# 0 = bronco style bitmaps, 1 = Moo style bitmaps, 
# 2 = Rabbit Ear bitmaps

# disable in-game movement of client windows
windowMove: off

# disable resizing of main window (not in-game)
mainResizeable: off

# display AGRI planet names in capital letters on the map window
agriCAPS: on

# to choose between: 0 - owner race color, 1 - white, 2 - gray
agriColor: 2

#Use "phaserShrink" and "theirPhaserShrink" even if a phaser misses.
#shrinkPhaserOnMiss: off

#(integer 0-16) Don't draw the first "phaserShrink"/16 th of
#your phaser.  This makes it easier to see incomming torps.
phaserShrink: 16
theirPhaserShrink: 0


# phaser shrinks during rechange time: 0 - COW style, 1 - BRMH style
phaserShrinkStyle: 1

# show armies count on galactic
showArmiesCount: on



